<div class="container">
  <div class="row">
    <div class="col-md-6 col-centered">

    <h3 class="text-center">Edit Store</h3>

      <form action="/stores/<%= @store.name %>/edit" method="post">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
          <label for="storeName">Store Name</label>
          <input type="text" class="form-control" name="storeName" value="<%= @store.name %>">
        </div>
        <div class="form-group">
          <label for="storeUrl">Store URL</label>
          <input type="url" class="form-control" name="storeUrl" value="<%= @store.url %>">
        </div>
        <div class="form-group">
          <label for="storeLocation">Location</label>
          <input type="text" class="form-control" name="storeLocation" value="<%= @store.location %>">
        </div>
        <div class="form-group">
          <label for="storeDescription">Brief Description</label>
          <textarea class="form-control" name="storeDescription" rows="4"><%= @store.description %></textarea>
        </div>
        <button type="submit" class="btn btn-default">Edit</button>
      </form>
    </div>
  </div>
</div>