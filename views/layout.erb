<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Photo App</title>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/imagesloaded.js"></script>
  <script src="/js/masonry.pkgd.min.js"></script>
</head>
<body>

  <!-- Nav Bar -->
  <nav class="navbar navbar-default">
    <div class="container-fluid notFullWidth">

      <div class="navbar-left logo">
        <a class="navbar-brand" href="/"><h1>SW<span>A</span>G</h1></a>
      </div>
      <% if logged_in? %>
      <ul class="nav navbar-nav">
        <li><a href="/stores">Stores</a></li>
      </ul>

      <form class="navbar-form text-center" action="/search">
        <div class="form-group">
          <input type="text" class="form-control" name="search" size="50" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-success">Search</button>
      </form>
      <% end %>

      <div class="navbar-right">
        <% if logged_in? %>
        <ul class="nav navbar-nav">
          <li><a href="/product/new">Create new product</a></li>
          <li><a href="/stores/new">Create new store</a></li>
        </ul>
        <form class="form-inline navbar-right" action="/session" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-default navbar-btn">Log Out</button>
        </form>
        <% else %>
        <a href="/signup" class="btn btn-warning navbar-btn">Sign up</a>
        <a href="/login" class="btn btn-info navbar-btn">Log In</a>
        <% end %>
      </div>
    </div>
  </nav>

  <%= yield %>

  <script src="/js/application.js"></script>
</body>
</html>