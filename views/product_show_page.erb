<div class="container">
	<div class="row">
		<div class="col-md-5">
			<img src="<%= @product.image_url %>" class="img-responsive">
			<a href="/stores/<%= @store.name %>/<%= @product.id %>/edit"><button class="btn btn-primary">Edit</button></a>

			<form action="/product/<%= @product.id %>/delete" method="post">
				<input type="hidden" name="_method" value="delete">
				<button class="btn btn-warning">Delete</button>
			</form>
		</div>
		<div class="col-md-6">
			<div class="likes">
				<p><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span> <%= @product.likes %> people like this</p>
			</div>
			<div class="row">
				<div class="col-md-5 col-md-offset-1">
					<div class="price">$<%= "%.2f" % @product.price %> <span>plus shipping</span>
					</div>
				</div>
				<div class="col-md-6">
					<button type="button" class="btn btn-info btn-lg">Add to cart</button>
				</div>
			</div>

			<h3><%= @product.name %></h3>
			<p><%= @product.description.gsub(/\n/, '<br/>') %></p>
		</div>
	</div>
</div>