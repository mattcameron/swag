<div class="container-fluid">
	<div class="row text-center logo">
		<h1><a href="<%= @store_url %>" style=><%= @store.name %></a></h1>
	</div>
	<div class="row text-center store-description">
		<%= @store.description %>
	</div>
<div class="container storeInfo">
	<div class="row text-center">
		<div class="col-md-3 iconBox"><span class="glyphicon glyphicon-knight storeIcons"></span><%= @store.products.count %> products</div>
		<div class="col-md-3 iconBox"><span class="glyphicon glyphicon-heart storeIcons"></span>124 likes</div>
		<div class="col-md-3 iconBox"><span class="glyphicon glyphicon-map-marker storeIcons"></span><%= @store.location %></div>
		<div class="col-md-3 iconBox"><span class="glyphicon glyphicon-tag storeIcons"></span>$28 avg price</div>
	</div>

</div>


	<div id="feed" class="row">
		<% @products.each do |product| %>
		<div class="item">
			<a href="/stores/<%= @store.name %>/<%= product.id %>">
				<img src="<%= product.image_url %>" class="img-responsive img-full">
			</a>

			<div class="productInfo">
				<div class="row productHoverTop">
					<div class="col-md-6 productLikes">
						<span id="<%= product.id %>" class="heartIcon glyphicon glyphicon-heart-empty" aria-hidden="true"></span> <span class="<%= product.id %>likeNumber"><%= product.likes %></span> likes
					</div>
					<div class="col-md-6 text-right">
						<a href="/stores/<%= @store.name %>/<%= product.id %>">
							<span class="label label-as-badge label-info">$<%= "%.0f" % product.price %></span>
						</a>
					</div>
				</div>
				<div class="productHoverBottom">
					<div class="row">
						<div class="col-md-12">
							<%= product.name %>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<a href="/stores/<%= product.store.name %>"><%= product.store.name %></a>
						</div>
						<div class="col-md-6 text-right">
							<form action="/swagbag/<%= product.id %>" method="post">
								<button type="submit" class="btn btn-success">Add to Cart</button>
							</form>
						</div>
					</div>
				</div>

			</div>
		</div>
		<% end %>
	</div>
</div>