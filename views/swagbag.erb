<div class="container inFocus logo">
	<h1 class="text-center">Your Sw<span>a</span>g Bag</h1>
	<hr>

<table class="table table-striped table-hover" id="cart">
	<tr>
		<th>Product</th>
		<th></th>
		<th>Qty</th>
		<th>Unit Price</th>
		<th class="text-right">Total</th>
		<th></th>
	</tr>

<% @lineItems.each do |lineitem| %>
<tr>
	<td class="col-md-1"><a href="/stores/<%= lineitem.product.store.name %>/<%= lineitem.product_id %>"><img class="img-responsive" src="<%= lineitem.product.image_url %>" alt="product image"></a></td>
	<td><a href="/stores/<%= lineitem.product.store.name %>/<%= lineitem.product_id %>"><%= lineitem.product.name %></a></td>
	<td><%= lineitem.qty %></td>
	<td>$<%= "%.2f" % lineitem.unit_price %></td>
	<td class="text-right">$<%= "%.2f" % lineitem.line_item_price %></td>
	<td>
		<form action="/swagbag/<%= lineitem.product_id %>" method="post">
			<input type="hidden" name="_method" value="delete">
			<button class="close"><span aria-hidden="true">&times;</span></button>
	</form>
</td>
</tr>
<% end %>
<tr>
	<td></td>
	<td></td>
	<td></td>
	<td class="text-right">Grand Total:</td>
	<td class="text-right">$</td>
</tr>


</table>
<div class="row text-right">
	<div class="col-md-12">
		<button class="btn btn-success">Checkout</button>
	</div>
</div>